@page
@model WebApp.Pages.Orden.EditModel
@{
}
div id="AppEdit" class="container" data-entity="@JsonSerializer.Serialize(Model.Entity)">
<div class="card">
    <div class="card-header">
        @(Model.id.HasValue ? "Actualizar" : "Nuevo")
    </div>
    <div class="card-body">
        <form id="FormEdit" method="post">
            <input type="hidden" asp-for="Entity.IdOrden" />

            <div class="form-group mb-3">
                <label for="Entity.IdOrden" class="form-label">Id Orden</label>

                <select asp-for="Entity.IdOrden" class="form-select"
                <select asp-for="Entity.IdProducto" class="form-select"

                        asp-items="@(new SelectList(Model.OrdenLista,"IdOrden","IdProducto","CantidadProducto","Estado"))" required>
                </select>
            </div>

            <div class="form-group mb-3">
                <label for="Entity.CantidadProducto" class="form-label">Nombre Producto</label>
                <input type="text" class="form-control" asp-for="Entity.CantidadProducto" maxlength="50" required>
            </div>

            <div class="form-group form-check form-switch">
                <input class="form-check-input" type="checkbox" asp-for="Entity.Orden" v-model="Entity.Orden" value="true">
                <label class="form-check-label" for="Entity_Estado">Estado</label>
            </div>

            <div class="row">
                <div class="col-4">
                    <button type="submit" class="btn btn-outline-primary">
                        @(Model.id.HasValue?"Actualizar":"Agregar")
                    </button>
                </div>
            </div>

        </form>


    </div>
</div>



@section Scripts{
    <script defer src="~/App/Orden/Edit.js"></script>

}