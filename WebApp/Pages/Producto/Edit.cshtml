@page
@model WebApp.Pages.Producto.EditModel
@{
}
div id="AppEdit" class="container" data-entity="@JsonSerializer.Serialize(Model.Entity)">
<div class="card">
    <div class="card-header">
        @(Model.id.HasValue ? "Actualizar" : "Nuevo")
    </div>
    <div class="card-body">
        <form id="FormEdit" method="post">
            <input type="hidden" asp-for="Entity.IdProducto" />

            <div class="form-group mb-3">
                <label for="Entity.MarcaVehiculoId" class="form-label">Marca Vehiculo</label>

                <select asp-for="Entity.IdProducto" class="form-select"
                        asp-items="@(new SelectList(Model.ProductoLista,"IdProducto","NombreProducto","PrecioProducto"))" required>
                </select>
            </div>

            <div class="form-group mb-3">
                <label for="Entity.NombreProducto" class="form-label">Nombre Producto</label>
                <input type="text" class="form-control" asp-for="Entity.NombreProducto" maxlength="50" required>
            </div>
            <div class="form-group mb-3">
                <label for="Entity.PrecioProducto" class="form-label">Precio Producto</label>
                <input type="number" class="form-control" asp-for="Entity.PrecioProducto" required>
            </div>


            <div class="row">
                <div class="col-4">
                    <button type="submit" class="btn btn-outline-primary">
                        @(Model.id.HasValue?"Actualizar":"Agregar")
                    </button>
                </div>
            </div>

        </form>


    </div>
</div>



@section Scripts{
    <script defer src="~/App/Vehiculo/Edit.js"></script>

}